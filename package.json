{
  "name": "tis-the-season-website",
  "version": "1.0.0",
  "description": "Main site for Tis the Season",
  "scripts": {
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "reload": "browser-sync reload",
    "serve": "browser-sync start --server --files \"dist/css/*.css, **/*.html, !node_modules/**/*.html\" --browser \"firefox developer edition\"",
    "build": "run-s scss",
    "watch:html": "onchange *.html -- run-s reload",
    "watch:css": "onchange \"src/scss\" -- run-s build reload",
    "watch": "run-p serve watch:*"
  },
  "author": "Stetson Ramey",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.7.2",
    "autoprefixer": "^9.4.7",
    "browser-sync": "^2.26.3",
    "colors.css": "^3.0.0",
    "imagemin-cli": "^4.0.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.1",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.1.1"
  }
}
